<h1>Index Controllers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @index_controllers.each do |index_controller| %>
      <tr>
        <td><%= link_to 'Show', index_controller %></td>
        <td><%= link_to 'Edit', edit_index_controller_path(index_controller) %></td>
        <td><%= link_to 'Destroy', index_controller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

