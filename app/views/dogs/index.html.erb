<div class="flex-container">
<% @dogs.each do |dog| %>
<div class="card-product">
  <img src="<%= dog.img_url %>">
  <div class="card-product-infos">
    <h2><%= dog.name %></h2>
    <p><%= dog.description %></p>  
    <div id="button">  <%= link_to 'Book Me', dog_path(dog), class: "btn btn-flat" %></div>

  </div>
</div>
<% end %>

